<html>
    <head>
        <title>
            <%=title%>
        </title>
        <link rel="stylesheet" href="./css/home.css">
        <script src="https://kit.fontawesome.com/b98405c5eb.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div id="contact-container">
            <div id="heading-container">
                <i class="fa-regular fa-address-book"></i>
                <h1 id="heading">My-Contact-Book</h1>
            </div>

            <div id="individual">
                <ul>
                    <%for(let i of contact_list){%>
                        <div class="individual-contacts">
                            <li>
                                <p><%=i.name%></p>
                            
                                <p><%=i.phone%></p>
                            </li>
                            <!-- -------------This is using string params -->
                            <!-- <a href="/delete-contact/<%=i.phone%>">
                                <i class="fa-regular fa-trash-can"></i>
                            </a> -->

                            <!-- -----------This is using query params------------ -->
                            <!-- <a href="/delete-contact/?phone=<%=i.phone%>">
                                <i class="fa-regular fa-trash-can"></i>
                            </a> -->

                            <!-- Using id in the domain of MongoDB -->
                            <a href="/delete-contact/?id=<%=i._id%>">
                                <i class="fa-regular fa-trash-can"></i>
                            </a>
                        </div>
                    <%}%>
                </ul>
            </div>
            <div id="form">
                <form action="/create-contact" method="post">
                    <input type="text" name="name" placeholder="Enter name" required>
                    <input type="number" name="phone" placeholder="Enter phone number" required>
                    <button type="submit">Add Contact </button>
                </form>
            </div>
        </div>

        
    </body>
    <script type="text/javascript" src="./js/home.js"></script>
</html>